                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <numIndex index="0">LLL:EXT:team_members/Resources/Private/Language/locallang.xlf:plugin.flexform.mode.showall</numIndex>
                                    <numIndex index="1">all</numIndex>
                                </numIndex>
                                <numIndex index="1">
                                    <numIndex index="0">LLL:EXT:team_members/Resources/Private/Language/locallang.xlf:plugin.flexform.mode.showselected</numIndex>
                                    <numIndex index="1">selection</numIndex>
                                </numIndex>
