                        <displayCond>FIELD:settings.mode:=:selection</displayCond>
                        <config>
                            <type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <itemsProcFunc>Kkroff\TeamMembers\Flex\ItemsProcFunc->getMembers</itemsProcFunc>
                            <minitems>0</minitems>
                            <maxitems>999</maxitems>
